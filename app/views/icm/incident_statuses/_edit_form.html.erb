<%= page_title %>

<%= form_for(@incident_status,:url=>{:action=>"update"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_icm_incident_status_edit)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @incident_status%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend"><span class="requiredExampleOuter">
          <span class="requiredExample">&nbsp;</span></span>
           <span class="requiredMark">*</span><span class="requiredText"> = <%=t(:label_is_required)%></span></span></span>
      <h3><%=t(:label_icm_incident_status_info)%></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_icm_incident_status_phase_code)%></label></td>
              <td class="dataCol"><%=f.select :phase_code,nullable_options_for_select(available_incident_phase,@incident_status.phase_code),
                                                    {},{:require=>true}%></td>
              <td class="labelCol"><label><%=(t :label_icm_incident_status_incident_status_code)%></label></td>
              <td class="dataCol"><%= @incident_status.incident_status_code%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_icm_incident_status_name)%></label></td>
              <td class="dataCol"><%=f.text_field :name, :required=>true%></td>
              <td class="labelCol"><%=t(:display_sequence)%></td>
              <td class="dataCol"><%=f.text_field :display_sequence, :required=>true %></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_icm_incident_status_description)%></label></td>
              <td class="dataCol"><%=f.text_area :description,:rows=>4%></td>
              <td class="labelCol"><label><%=(t :default_flag)%></label></td>
              <td class="dataCol"><%=f.check_box :default_flag%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_script_status_code)%></label></td>
              <td class="dataCol"><%=f.select :status_code,nullable_collection_options(available_status,:lookup_code,:wrap_meaning,@incident_status.status_code)%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
   
