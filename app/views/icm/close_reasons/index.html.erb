<%= page_title %>
<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_icm_close_reason_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="close_reason_list" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit), {:action=>"edit",:id=>"{id}"}) %>&nbsp;
            <%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("close_reason_list",url_for(:action=>"get_data",:format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"80px"},
                       {:key=>"company_name",:label=>t(:label_icm_close_reason_company),:sortable=>true},
                       {:key=>"name",:label=>t(:label_icm_close_reason_name),:sortable=>true},
                       {:key=>"close_code",:label=>t(:label_icm_close_reason_close_code),:sortable=>true}
                       ],{:paginator_box=>"closePaginator"})%>
        <div id="closePaginator"></div>
      </div>
    </div>
</div>
