<%= form_for(@external_system,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_uid_external_system_new)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @external_system %>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>

            <tr>
              <td class="labelCol"><label for="external_system_external_system_code"><%=t(:label_uid_external_system_external_system_code)%></label></td>
              <td class="dataCol"><%=f.text_field :external_system_code, :required=>true ,:irm_uppercase=>true,:id=>"external_system_external_system_code"%></td>
              <td class="labelCol"><label for="external_system_external_hostname"><%=t(:label_uid_external_system_external_hostname)%></label></td>
              <td class="dataCol"><%=f.text_field :external_hostname, :required=>true ,:id=>"external_system_external_hostname"%></td>
            </tr>

            <tr>
              <td class="labelCol"><label for="external_system_system_name"><%=t(:label_uid_external_system_system_name)%></label></td>
              <td class="dataCol"><%=f.text_field :system_name, :required=>true ,:id=>"external_system_system_name"%></td>
              <td class="labelCol"><label for="external_system_external_ip_address"><%=t(:label_uid_external_system_external_ip_address)%></label></td>
              <td class="dataCol"><%=f.text_field :external_ip_address, :required=>true ,:id=>"external_system_external_ip_address"%></td>
            </tr>

            <tr>
              <td class="labelCol"><label for="external_system_system_description"><%=t(:label_uid_external_system_system_description)%></label></td>
              <td class="dataCol"><%= f.text_area :system_description, :rows => 4,:id=>"external_system_system_description"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>

        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
