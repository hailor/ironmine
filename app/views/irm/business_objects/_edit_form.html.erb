<%= form_for(@business_object,:url=>{:action=>"update"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_business_object_edit)%>:<%= @business_object[:name]%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @business_object %>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <% if @business_object.auto_generate_flag.eql?(Irm::Constant::SYS_YES)%>
           <tbody>
            <tr>
              <td class="labelCol"><label for="business_object_business_object_code"><%=t(:label_irm_business_object_business_object_code)%></label></td>
              <td class="dataCol"><%=@business_object.business_object_code%></td>
              <td class="labelCol"><label for="business_object_name"><%=t(:label_irm_business_object_name)%></label></td>
              <td class="dataCol"><%=f.text_field :name, :required=>true ,:id=>"business_object_name"%></td>
            </tr>
            <tr>
              <td class="labelCol"><label for="business_object_table_name"><%=t(:label_irm_business_object_bo_table_name)%></label></td>
              <td class="dataCol"><%=@business_object.bo_table_name%></td>
              <td class="labelCol"><label for="business_object_model_name"><%=t(:label_irm_business_object_bo_model_name)%></label></td>
              <td class="dataCol"><%=@business_object.bo_model_name%></td>
            </tr>
            <tr>
              <td class="labelCol"><label for="business_object_multilingual_flag"><%=t(:label_irm_business_object_multilingual_flag)%></label></td>
              <td class="dataCol"><%=check_img(@business_object.multilingual_flag)%></td>
              <td class="labelCol"><label for="business_object_workflow_flag"><%=t(:label_irm_business_object_workflow_flag)%></label></td>
              <td class="dataCol"><%=f.check_box(:workflow_flag,:id=>"business_object_workflow_flag")%></td>
            </tr>
           </tbody>
        <% else %>
            <tbody>
             <tr>
               <td class="labelCol"><label for="business_object_business_object_code"><%=t(:label_irm_business_object_business_object_code)%></label></td>
               <td class="dataCol"><%=@business_object.business_object_code%></td>
               <td class="labelCol"><label for="business_object_name"><%=t(:label_irm_business_object_name)%></label></td>
               <td class="dataCol"><%=f.text_field :name, :required=>true ,:id=>"business_object_name"%></td>
             </tr>
             <tr>
               <td class="labelCol"><label for="business_object_table_name"><%=t(:label_irm_business_object_bo_table_name)%></label></td>
               <td class="dataCol"><%=@business_object.bo_table_name%></td>
               <td class="labelCol"><label for="business_object_model_name"><%=t(:label_irm_business_object_bo_model_name)%></label></td>
               <td class="dataCol"><%=@business_object.bo_model_name%></td>
             </tr>
             <tr>
               <td class="labelCol"><label for="business_object_multilingual_flag"><%=t(:label_irm_business_object_multilingual_flag)%></label></td>
               <td class="dataCol"><%=f.check_box :multilingual_flag ,:id=>"business_object_multilingual_flag"%></td>
               <td class="labelCol empty">&nbsp;</td>
               <td class="dataCol empty">&nbsp;</td>
             </tr>
            </tbody>

        <% end  %>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
