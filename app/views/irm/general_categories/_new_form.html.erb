<%= setting_title %>
<%= form_for(@general_category,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_general_category_new)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @general_category%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=t :label_irm_general_category_type%></label></td>
              <td class="dataCol">
              <%=f.select :category_type, available_category_types, {:include_blank => t(:select)}, :required => true, :onchange => "new_irm_general_category.submit();", :id => "select_category_types"%>
              </td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_general_category_company%></label></td>
              <td class="dataCol"><%=f.select :company_id, available_company, {:include_blank => t(:select)}, :required=>true%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <% if @general_category && !@general_category.category_type.blank? %>
            <tr>
              <td class="labelCol"><label><%=t :label_irm_general_category_segment1%></label></td>
              <td class="dataCol"><%=f.select :segment1, available_category_segment_set(:segment1, @general_category.category_type), {:include_blank => t(:default)}, :id => "s1"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=t :label_irm_general_category_segment2%></label></td>
              <td class="dataCol"><%=f.select :segment2, available_category_segment_set(:segment2, @general_category.category_type), {:include_blank => t(:default)}, :id => "s2"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=t :label_irm_general_category_segment3%></label></td>
              <td class="dataCol"><%=f.select :segment3, available_category_segment_set(:segment3, @general_category.category_type), {:include_blank => t(:default)}, :id => "s3"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <% end %>
            <tr>
              <td class="labelCol"><label><%=(t :active)%></label></td>
              <td class="dataCol"><%=f.select :status_code, available_active_status, {:include_blank => false}%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:controller => "irm/general_categories", :action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>

<script type="text/javascript">
GY.use("irm",function(Y){
    Y.on("domready",function(){
        Y.one("#select_category_types").set("value", "<%= @general_category.category_type%>");
    });
});
</script>
