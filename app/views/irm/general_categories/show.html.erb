<%= setting_show_title(:show_data => @general_category.concat_segment_name) %>
<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_general_category) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @general_category}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=t :label_irm_general_category_type%></label></td>
              <td class="dataCol">
              <%= @general_category.category_type_name%>
              </td>
            </tr>             
            <tr>
              <td class="labelCol"><label><%= t :label_irm_general_category_company%></label></td>
              <td class="data2Col"><div><%= @general_category.company_name%></div></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=t :label_irm_general_category_segment1%></label></td>
              <td class="data2Col"><div><%= @general_category.segment1_name%></div></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=t :label_irm_general_category_segment2%></label></td>
              <td class="data2Col"><div><%= @general_category.segment2_name%></div></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=t :label_irm_general_category_segment3%></label></td>
              <td class="data2Col"><div><%= @general_category.segment3_name%></div></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :active)%></label></td>
              <td class="data2Col"><div><%= check_img(@general_category.status_code)%></div></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>