<div class="bPageTitle">
  <div class="ptBody">
    <div class="content">
      <h1 class="pageType"></h1>
      <h2 class="pageDescription"><%= t(:label_irm_support_group_member_new) %></h2>
      <div class="blank">&nbsp;</div>
    </div>
    <div class="links">
      <a href="javascript:void(0);" class="configLinks">此页面的帮助</a>
    </div>
    <div class="ptBreadcrumb"></div>
  </div>
</div>
<div class="filterOverview">
    <div class="bFilterView">
      <%= form_tag(:action => "select_person",:support_group_code=>@support_group_code,:person_name=>@person_name) do %>
      <%= hidden_field_tag "return_url",@return_url%>
      <span class="bFilter">
        <label style="text-align: left; font-weight: bold; padding-right: 0.69em;"><%= t(:label_irm_person_name) %>：</label>
        <span class="fBody">
            <%= text_field_tag :person_name,@person_name%>
            <%= submit_tag t(:jump), :title => t(:jump), :class => "btn" %>
        </span>
        <span class="fFooter">
          <a href="javascript:void(0);">编辑</a> |
          <a href="javascript:void(0);">创建新视图</a>
        </span>
      </span>
      <% end %>
    </div>
</div>
<% if !@person_name.blank? %>
<%= form_for(@support_group_member,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
<%= hidden_field_tag "support_group_code",@support_group_code%>
<%= hidden_field_tag "person_name",@person_name%>
<%= hidden_field_tag "return_url",@return_url%>
<div class="srch">
<div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_select_result) %>&nbsp;<%= t(:label_detail_info) %></h2></td>
          <td id="topButtonRow1" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <% if !@return_url.blank? %>
              <div class="button"><%= link_to t(:cancel), @return_url%></div>
            <% else %>
              <div class="button"><%= link_to t(:cancel), {:action => "select_person",:support_group_code=>@support_group_code,
                                                           :person_name=>@person_name}%></div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbBody">
        <div id="support_group" class="datatable" style="width:100%;">
          <div id="id" style="display:none">
             <%= check_box_tag "irm_support_group_member[person_id][]","{id}"%>
          </div>
        </div>
        <%= datatable("support_group",url_for(:action=>"get_person",:person_name=>@person_name,
                                              :support_group_code=>@support_group_code),
                  [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"50%"},
                   {:key=>"person_name",:label=>t(:label_irm_support_group_person_name),:sortable=>true},
                   {:key=>"company_name",:label=>t(:label_irm_support_group_company_name),:sortable=>true},
                   {:key=>"email_address",:label=>t(:label_irm_person_email_address),:sortable=>true},],
                   {:row_perpage=>5})%>
      </div>
</div>
<% end %>
<% end %>