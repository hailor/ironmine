<div class="bSubBlock">
    <% events_count = my_events_count %>
    <% list_limit = 5%>
    <h3 class="lbHeader"><%= t(:my_event) + "(" + events_count.to_s + ")" %></h3>
    <div class="lbBody">
      <ul>
        <%= raw(my_events_list(list_limit)) %>
      </ul>
    </div>
    <div class="quickCreateField">
      <div class="button"><%= link_to t(:label_irm_todo_event_new), {:controller => "irm/todo_events", :action => "new"} %></div>
      <div style="float:right;"><%= (link_to t(:more) + "...", {:controller => "irm/todo_events", :action => "my_events_index"}) if events_count >= list_limit %></div><br>
    </div>
</div>