<%= setting_show_title(:show_data => @task.name) %>

<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @task}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index", :controller => "irm/home"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_todo_event_name)%></label></td>
              <td class="dataCol"><%= @task.name%></td>
              <td class="labelCol"><label><%=(t :label_irm_todo_event_start_at)%></label></td>
              <td class="dataCol"><%= @task.start_at.strftime("%F %T") if @task.start_at%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=t :label_irm_todo_event_assigned_to%></label></td>
              <td class="dataCol"><%= @task.assigned_name%></td>
              <td class="labelCol"><label><%=(t :label_irm_todo_event_end_at)%></label></td>
              <td class="dataCol"><%= @task.end_at.strftime("%F %T") if @task.end_at %></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_todo_event_priority %></label></td>
              <td class="dataCol"><%= @task.priority_name %></td>
              <td class="labelCol"><label><%=t :label_irm_todo_event_location%></label></td>
              <td class="dataCol"><%= @task.location%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :description %></label></td>
              <td class="dataCol"><%= @task.description %></td>

            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_todo_event_event_status %></label></td>
              <td class="dataCol"><%= @task.event_status_name %></td>

            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% content_for :sidebar do %>
    <%= render :partial =>"/irm/common/recently_objects" %>
<% end %>