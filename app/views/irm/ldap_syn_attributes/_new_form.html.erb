<%= form_for(@ldap_syn_attribute,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
    <%= back_url_hidden_field_tag %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_ldap_syn_attribute_new)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @ldap_syn_attribute %>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
             <tr>
              <td class="labelCol"><label><%=t(:label_irm_ldap_syn_attribute_local_attr)%></label></td>
              <td class="dataCol"><%=f.blank_select(:local_attr, available_syn_object_attribute(@object_type),{},:required=>true)%></td>
              <td class="labelCol empty"><%=f.hidden_field :object_type,:value=>@object_type%></td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=t(:label_irm_ldap_syn_attribute_ldap_attr_type)%></label></td>
              <td class="dataCol"><%=f.blank_select(:ldap_attr_type,available_syn_value_type,
                                                {},:required=>true)%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=t(:label_irm_ldap_syn_attribute_ldap_attr)%></label></td>
              <td class="dataCol"><%=f.text_field :ldap_attr, :required=>true %></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=t(:label_irm_ldap_syn_attribute_description)%></label></td>
              <td class="dataCol"><%=f.text_area :description,:rows=>4%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=t(:label_irm_ldap_syn_attribute_null_able)%></label></td>
              <td class="dataCol"><%=f.check_box :null_able%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
