<%= form_for(@wf_approval_step,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_wf_approval_step_new)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @wf_approval_step %>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>

                      <tr>
              <td class="labelCol"><label for="wf_approval_step_evaluate_mode"><%=t(:label_irm_wf_approval_step_evaluate_mode)%></label></td>
              <td class="dataCol"><%=f.text_field :evaluate_mode, :required=>true ,:id=>"wf_approval_step_evaluate_mode"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
                      <tr>
              <td class="labelCol"><label for="wf_approval_step_evaluate_result"><%=t(:label_irm_wf_approval_step_evaluate_result)%></label></td>
              <td class="dataCol"><%=f.text_field :evaluate_result, :required=>true ,:id=>"wf_approval_step_evaluate_result"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
                      <tr>
              <td class="labelCol"><label for="wf_approval_step_approver_mode"><%=t(:label_irm_wf_approval_step_approver_mode)%></label></td>
              <td class="dataCol"><%=f.text_field :approver_mode, :required=>true ,:id=>"wf_approval_step_approver_mode"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
                      <tr>
              <td class="labelCol"><label for="wf_approval_step_multiple_approver_mode"><%=t(:label_irm_wf_approval_step_multiple_approver_mode)%></label></td>
              <td class="dataCol"><%=f.text_field :multiple_approver_mode, :required=>true ,:id=>"wf_approval_step_multiple_approver_mode"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
                      <tr>
              <td class="labelCol"><label for="wf_approval_step_allow_delegation_approve"><%=t(:label_irm_wf_approval_step_allow_delegation_approve)%></label></td>
              <td class="dataCol"><%=f.text_field :allow_delegation_approve, :required=>true ,:id=>"wf_approval_step_allow_delegation_approve"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
                      <tr>
              <td class="labelCol"><label for="wf_approval_step_reject_behavior"><%=t(:label_irm_wf_approval_step_reject_behavior)%></label></td>
              <td class="dataCol"><%=f.text_field :reject_behavior, :required=>true ,:id=>"wf_approval_step_reject_behavior"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
                  </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
