<%= setting_show_title(:show_data => @site_group.group_code) %>
<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_site_group_show) %>&nbsp;<%= t(:label_detail_info) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @site_group}%></div>
            <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_site_group_region_name)%></label></td>
              <td class="dataCol"><%=@site_group[:region_name]%></td>
              <td class="labelCol"><label><%=(t :label_irm_site_group_group_code)%></label></td>
              <td class="dataCol"><%=@site_group.group_code%></td>
            </tr>
            <tr>              
              <td class="labelCol"><label><%=(t :label_irm_site_group_name)%></label></td>
              <td class="dataCol"><%=@site_group[:name]%></td>
              <td class="labelCol"><label><%=(t :label_irm_site_group_status_code)%></label></td>
              <td class="dataCol"><%=@site_group[:status_meaning]%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_site_group_description)%></label></td>
              <td class="dataCol"><%=@site_group[:description]%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_site_list) %></h2></td>
              <td class="pbButton">
                <div class="button"><%= link_to t(:add), {:controller=>"irm/sites",:action => "new",:site_group_code=>@site_group.group_code,:_from=>"site_group"}%></div>
              </td>
              <td class="pbHelp">
                <select title="显示所选内容" name="hotlist_mode" id="hotlist_mode"><option value="2">最近创建</option>
                <option value="1">最近修改</option>
                <option selected="selected" value="3">最近查看</option>
                </select>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="site" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:controller=>"irm/sites",:action=>"edit",:id=>"{id}",:_from=>"site_group"}) %>|
            <%= link_to(t(:show),{:controller=>"irm/sites",:action=>"show",:id=>"{id}",:_from=>"site_group"}) %>
          </div>
        </div>
        <%= datatable("site",url_for(:action=>"get_current_group_site", :group_code=>@site_group.group_code),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template"},
                       {:key=>"site_code",:label=>t(:label_irm_site_site_code),:sortable=>true},
                       {:key=>"name",:label=>t(:label_irm_site_name),:sortable=>true},
                       {:key=>"description",:label=>t(:label_irm_site_description),:sortable=>true},
                       {:key=>"status_meaning",:label=>t(:label_irm_site_group_status_code),:sortable=>true}],
                       {:row_perpage=>5}) %>
      </div>
    </div>
</div>

