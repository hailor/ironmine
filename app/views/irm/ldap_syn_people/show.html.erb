            <td class="dataCol"><%=@ldap_syn_person[:department_name]%></td>
            <td class="labelCol"><label><%=(t :label_irm_person_site_code)%></label></td>
            <td class="dataCol"><%=@ldap_syn_person[:site_name]%></td>
