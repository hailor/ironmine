        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_ldap_syn_person_name) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to(t(:edit),{:controller => "irm/ldap_syn_people",:action=>"edit",:id=>@ldap_syn_person}) %></div>
            <div class="button"><%= link_to t(:back), {:controller => "irm/ldap_syn_people",:action => "index"}%></div>
