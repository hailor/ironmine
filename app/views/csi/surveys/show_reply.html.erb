<%= stylesheet_link_tag "/javascripts/yui3.3/datatable/assets/skins/sam/datatable.css"%>

<div class="lightBlue">
    <div class="bPageTitle">
        <div class="secondaryPalette" style="background-color:#1797C0;">
          <h1 class="title"><%= @survey.title%></h1>
        </div>
    </div>
</div>

<div id="ep" class="bDetailBlock bPageBlock">
        <div class="datatable">
          <div class="yui3-widget yui3-datatable">
            <div class="yui3-datatable-content">
                <table id='rows' cellspacing="0" cellpadding="0" class='grid'>
                  <thead class="yui3-datatable-columns">
                    <tr class="yui3-datatable-first yui3-datatable-last">
                      <th class="yui3-column" style="width:220px">
                        <div class="yui3-datatable-liner"><%= t(:label_csi_survey_subject_title) %>
                        </div>
                      </th>
                      <th class="yui3-column" style="width:180px;">
                        <div class="yui3-datatable-liner"><%= t(:label_csi_survey_subject_result) %>
                        </div>
                      </th>
                    </tr>
                  </thead>
                  <tbody class="yui3-datatable-data">
                  <% @survey_results.each do |result| %>
                  <tr id="<%=result.id%>" class="yui3-datatable-even">
                    <td class="yui3-column">
                      <div class='yui3-datatable-liner'>
                        <%= result[:subject_name]%>
                       </div>
                    </td>
                    <td class="yui3-column">
                      <div class='yui3-datatable-liner'>
                        <%=result[:subject_result]%>
                      </div>
                    </td>
                  </tr>
                  <% end -%>
                  </tbody>
                </table>
            </div>
          </div>
        </div>
</div>

<% content_for :sidebar do %>
    <%= render :partial =>"/irm/common/recently_objects" %>
<% end %>