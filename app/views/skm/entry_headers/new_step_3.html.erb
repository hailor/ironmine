  function submit_next(){
    document.new_skm_entry_header.action = "new?step=4";
    new_skm_entry_header.submit();
  }

  function submit_last(){
    document.new_skm_entry_header.action = "new?step=2";
    new_skm_entry_header.submit();
  }

