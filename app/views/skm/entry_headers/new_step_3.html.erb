    file_form.submit();
  }
 function delete_line(l)
 {
      GY.use(function(Y){
          Y.one("#file_" + l).remove();
      })
  }
  function generate_line()
  {
      GY.use(function(Y){
          var node = Y.Node.create('<tr id="file_' + line_count + '">'
