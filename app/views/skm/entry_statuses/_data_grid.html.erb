<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_skm_entry_status_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="statusesSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="entry_statuses_list" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:controller => "skm/entry_statuses", :action=>"edit",:id=>"{id}"}) %>
          </div>
          <div id="status_code" style="display:none">
            <%= check_img("{status_code}") %>
          </div>
          <div id="visiable_flag" style="display:none">
            <%= check_img("{visiable_flag}") %>
          </div>               
        </div>
        <%= datatable("entry_statuses_list",url_for(:action=>"get_data",:format=>"json"),
                  [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"60px"},
                   {:key=>"entry_status_code",:label=>t(:label_skm_entry_status_code),:sortable=>true, :searchable => true,:width=>"100px"},
                   {:key=>"name",:label=>t(:name),:sortable=>true, :searchable => true,:width=>"150px"},
                   {:key=>"description",:label=>t(:description),:sortable=>true},
                   {:key=>"visiable_flag",:label=>t(:label_skm_entry_status_visiable),:formatter=>"Y.irm.template",:sortable=>true,:width=>"40px"},
                   {:key=>"status_code",:label=>t(:active),:formatter=>"Y.irm.template",:sortable=>true, :width => "40px"}], {:search_box => "statusesSearchBox"})%>
      </div>
    </div>
</div>