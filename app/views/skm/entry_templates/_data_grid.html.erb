<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_skm_entry_template_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="templatesSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="entry_templates_list" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= icon_link_edit({:controller => "skm/entry_templates", :action=>"edit",:id=>"{id}"}) %>&nbsp;
            <%= icon_link_show({:controller => "skm/entry_templates", :action => "show", :id => "{id}"})%>
          </div>
          <div id="status_code" style="display:none">
            <%= check_img("{status_code}") %>
          </div>                   
        </div>
        <%= datatable("entry_templates_list",url_for(:action=>"get_data",:format=>"json"),
                  [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"80px"},
                   {:key=>"entry_template_code",:label=>t(:label_skm_entry_template_code),:sortable=>true,:searchable=>true, :width => "15%"},
                   {:key=>"name",:label=>t(:name),:sortable=>true,:searchable=>true, :width => "30%"},
                   {:key=>"description",:label=>t(:description),:sortable=>true},
                   {:key=>"status_code",:label=>t(:active),:sortable=>true,:formatter=>"Y.irm.template", :width => "40px"}],{:search_box=>"templatesSearchBox"})%>
      </div>
    </div>
</div>